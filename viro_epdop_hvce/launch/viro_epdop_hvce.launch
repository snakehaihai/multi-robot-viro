<?xml version="1.0"?>
<launch>
  <!-- Multi-Robot VIRO: EPDOP Screening + HVCE Re-weighting -->
  
  <!-- Arguments -->
  <arg name="robot_namespace" default="robot0" />
  <arg name="num_robots" default="3" />
  <arg name="enable_epdop" default="true" />
  <arg name="enable_hvce" default="true" />
  
  <!-- Load configuration parameters -->
  <rosparam command="load" file="$(find viro_epdop_hvce)/config/viro_params.yaml" />
  
